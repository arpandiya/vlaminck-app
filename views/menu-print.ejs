<!-- Menu contents -->
    <% menuItem.forEach((item) => { %>
        
    <% if(item.category === 'Drinks') { %>
            <div class="menu__box">
                <div class="menu__title">
                    <!-- <h2>{{ items.item }}</h2>
                    <hr> -->
